<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Tenant"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/brand_primary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update details and documents below."
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_white"
            android:elevation="2dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:hint="Full Name"
            android:textColorHint="#9E9E9E"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false">

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_white"
                android:elevation="2dp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="12dp"
                android:inputType="phone"
                android:hint="Phone"
                android:textColorHint="#9E9E9E"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/editParent"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_white"
                android:elevation="2dp"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="12dp"
                android:inputType="phone"
                android:hint="Parent Phone"
                android:textColorHint="#9E9E9E"
                android:textSize="14sp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/editCompany"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_white"
            android:elevation="2dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:hint="Company / College"
            android:textColorHint="#9E9E9E"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/editRoom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_white"
            android:elevation="2dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:inputType="number"
            android:hint="Room Number"
            android:textColorHint="#9E9E9E"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Details"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Spinner
                android:id="@+id/spinnerEditVehicleType"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_white"
                android:elevation="2dp"
                android:layout_marginEnd="6dp"/>

            <EditText
                android:id="@+id/editVehicleNumber"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/bg_input_white"
                android:elevation="2dp"
                android:paddingHorizontal="16dp"
                android:hint="Vehicle No"
                android:textColorHint="#9E9E9E"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Documents"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="4dp">
                <ImageView
                    android:id="@+id/imgEditFront"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_input_white"
                    android:elevation="2dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_camera"
                    android:padding="20dp"
                    android:alpha="0.6"/> <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Front" android:textSize="10sp" android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="4dp">
                <ImageView
                    android:id="@+id/imgEditBack"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_input_white"
                    android:elevation="2dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_camera"
                    android:padding="20dp"
                    android:alpha="0.6"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Back" android:textSize="10sp" android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="4dp">
                <ImageView
                    android:id="@+id/imgEditForm"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_input_white"
                    android:elevation="2dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:padding="20dp"
                    android:alpha="0.6"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Form" android:textSize="10sp" android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SAVE CHANGES"
            android:backgroundTint="@color/brand_primary"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:letterSpacing="0.05"
            android:elevation="4dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>