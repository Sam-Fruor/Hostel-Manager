<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_input_white"
            android:backgroundTint="#F1F3F7"> <ImageView
            android:id="@+id/imgVehicleIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/motorbike"
            android:scaleType="fitCenter"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PB-08-AB-1234"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"/>

            <TextView
                android:id="@+id/tvOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner: Rahul Kumar"
                android:textSize="14sp"
                android:textColor="@color/text_grey"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bike"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/brand_primary"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvRoomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hostel 101"
            android:textSize="12sp"
            android:background="@drawable/bg_btn_action"
            android:backgroundTint="#E0F2F1"
            android:textColor="@color/brand_primary"
            android:textStyle="bold"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:maxWidth="110dp"
            android:gravity="center"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>